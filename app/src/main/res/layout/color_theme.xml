<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android='http://schemas.android.com/apk/res/android'
android:layout_width='match_parent'
android:layout_height='match_parent'
android:orientation='vertical'
android:background = "@color/bback"

>
       



      <TextView
                                         
        android:layout_width='110dp'
        android:layout_height='140dp'
        android:background = "@drawable/gradient_sub"
    
        android:text='purple theme'
        android:textColor='@color/white'
        android:textSize='15dp'
        android:textStyle='bold'
        android:gravity = 'center'
        android:layout_margin = "2dp"
        android:tag="purpleTheme"
        android:onClick="themeChange"
        />

        <TextView
                                         
        android:layout_width='110dp'
        android:layout_height='140dp'
        android:background = "@drawable/gradient_sub"
    
        android:text='default theme'
        android:textColor='@color/white'
        android:textSize='15dp'
        android:textStyle='bold'
        android:gravity = 'center'
        android:layout_margin = "2dp"
        android:tag="default"
        android:onClick="themeChange"
        />

        <TextView
                                         
        android:layout_width='110dp'
        android:layout_height='140dp'
        android:background = "@drawable/gradient_sub"
    
        android:text='black theme'
        android:textColor='@color/white'
        android:textSize='15dp'
        android:textStyle='bold'
        android:gravity = 'center'
        android:layout_margin = "2dp"
        android:tag="blackTheme"
        android:onClick="themeChange"
        />

</LinearLayout>